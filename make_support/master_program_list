############################## List of Categories #############################
# The categories have no directories or source, but are valid autotar and
# makefile targets.
CATEGORIES
{
# Convert package
	convert
	{
 		asf_convert_gui
  		asf_convert
		asf_export
		asf_import
		asf_geocode
	        asf_terrcorr
		gr2sr
		metadata_gui
		metadata
		mosaic
		refine_geolocation
		sr2gr
	}

# Data quality tools
	dq-tools
	{
		detect_cr
		image_stats
		meta_check
		offset_test
		pta
	}

# General SAR stuff: importing, geocoding, terrain correcting, exporting, etc
	general
	{
		convert
		stats convert2byte convert2jpeg
		deskew dspddr fftMatch makeddr meta2ddr metadata raster_calc
		raster_diff remap resample sarout sr2gr trim accum_offset
		concat concat_dem concatm fit_quadratic idimage
	}

# All the tools including the interferometry tools (old name: restricted)
	all
	{
		general
		ardop avg_in_dop c2p coh coregister_coarse coregister_fine
		create_dem_grid dem2phase dem2seeds deskew_dem reskew_dem
		deramp elev eleverr escher fit_line fit_plane fit_warp igram
		multilook p2c phase_filter refine_base refine_offset zeroify
	}
}
