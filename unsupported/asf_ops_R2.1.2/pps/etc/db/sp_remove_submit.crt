if exists (select * from sysobjects where name = "sp_remove_submit")
	drop proc sp_remove_submit
go

create proc sp_remove_submit (@job_id int)
as
	declare @job_state 	JobStateType 

	select @job_state = job_state
		from jobs
		where job_id = @job_id

	if @job_state != "SUBMITTED"
	begin
		print "job is not submitted"
		select 0
	end

	else
		select 1
go
