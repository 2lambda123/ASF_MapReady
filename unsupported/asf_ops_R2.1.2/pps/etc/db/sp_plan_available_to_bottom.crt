/* stored procedure to send an AVAILABLE job to the bottom of the schedule.
								- jtg */

if exists (select * from sysobjects where name = "sp_plan_available_to_bottom")
	drop procedure sp_plan_available_to_bottom
go

create proc sp_plan_available_to_bottom (
		@job_id 	 int,
		@quicklook_flag  LogicalType)
	as

	declare @max_sequence		int

	/* begin transaction */
	begin transaction

	/* get highest sequence number currently in schedule */
	select @max_sequence = max(job_sequence) from schedule holdlock
		where quicklook_flag = @quicklook_flag

	/* really no errors here, just handle empty schedule */
	if (@max_sequence is null)
	begin
		select @max_sequence = 0
	end

	/* increment @max_sequence */
	select @max_sequence = @max_sequence + 1

	/* update state_date in the jobs table */
	update jobs
		set state_date = getdate()
                where job_id = @job_id

	if (@@transtate > 0)
	begin
		rollback transaction
		return -1
	end

	/* update state_date in the ppsgui_orders table */
	update ppsgui_orders
		set state_date = getdate()
                where job_id = @job_id

	if (@@transtate > 0)
	begin
		rollback transaction
		return -1
	end

	/* update job_sequence in the schedule table */
	update schedule
		set job_sequence = @max_sequence
                where job_id = @job_id

	if (@@transtate > 0)
	begin
		rollback transaction
		return -1
	end

	/* commit transaction */
	commit transaction

go
