/*==============================================================================
Filename:	L1_procparms.crt

Purpose:        Destroy old L1 processing params database relation and
		create a new one.

Input:          none.
 
Output:         PPS database L1_procparms relation.
 
Modif History:
		@(#)L1_procparms.crt	1.2  11/27/96
 
Detailed Desc: 	Level 1 Processing Parameters
==============================================================================*/

if exists (select 1 from sysobjects where name = "L1_procparms")
	drop table L1_procparms
go

create table L1_procparms (
	job_id                  int                     not null,  /* key */

	quicklook_flag	        LogicalType		null,

	platform	        SatType			not null,
	sensor		        SensorType		not null,
	rev		        int			not null,
	mode		        ModeType		not null,
	sequence	        int			null,
	activity_id	        ActivityIdType		null,
	product_type	        ProductType		null,

	pixel_spacing	        real			null,
	frame_id	        int			null,
	subframe_id	        int			null,
	frame_mode	        FrameModeType		null,
	output_format	        OutputFormatType	null,
	site_name	        char(128)		null,
	projection	        ProjectionType		null,

	processing_gain		int			null,
	deskew			LogicalType		null,
	avg_terrain_ht		real			null,
	compensation_flag	LogicalType     	null,
	ps_reference_lat	real			null,
	ps_reference_lon	real			null,
	utm_zone		int			null,
	terrain_correction	LogicalType		null,
	lambert_latitude_n	real			null,
	lambert_latitude_s	real			null,

	/* source media */     
	data_direction          DataDirectionType	null,
	media_type	        MediaTypeType		null,
	media_id	        MediaIdType		null,
	media_location          varchar(128)		null,
	start_time	        TimeType		null,
	end_time	        TimeType		null,
	center_time	        TimeType		null,
	recorder_id	        RecorderIdType		null,
	station_id	        StationIdType		null,

	gha_time	        TimeType		null,
	gha_angle	        real			null,

	tce_rev		        int			null,
	tce_time	        TimeType		null,
	tce_sat_time	        int			null,
	tce_clock_cycle	        int			null,

	sv_type		        StateVecType		null,
	sv_coord_sys	        CoordSysType		null,
	sv_rev		        int			null,
	sv_time		        TimeType		null,
	sv_x_pos	        real			null,
	sv_y_pos	        real			null,
	sv_z_pos	        real			null,
	sv_x_velocity	        real			null,
	sv_y_velocity	        real			null,
	sv_z_velocity	        real			null,

	scan_results_file	varchar(255)		null,
	cal_params_file		varchar(40)    		null,
	cal_params_file2        varchar(40)    		null,

	primary key clustered (job_id, platform, mode)
)
go
