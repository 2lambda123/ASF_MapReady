if exists (select * from sysobjects where name = "sp_is_job_pending")
	drop proc sp_is_job_pending
go

create proc sp_is_job_pending ( @job_id int ) 
as
	declare @job_state char(15)
	select @job_state = ""

	select @job_state = job_state
			from  jobs 
			where job_id = @job_id
	if @job_state = "PENDING"
		return 1
	else
		return 0

go
