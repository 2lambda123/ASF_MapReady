if exists (select * from sysobjects where name = "sp_is_job_submitted")
	drop proc sp_is_job_submitted
go

create proc sp_is_job_submitted ( @job_id int ) 
as
	declare @job_state JobStateType 
	select @job_state = ""

	select @job_state = job_state
			from jobs 
			where job_id = @job_id
	if @job_state = "SUBMITTED"
		return 1
	else
		return 0

go
