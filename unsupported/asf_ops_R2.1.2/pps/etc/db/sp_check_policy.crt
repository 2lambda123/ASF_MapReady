=========================*/
if exists (select * from sysobjects where name = "sp_check_policy")
	drop proc sp_check_policy
go

create proc sp_check_policy (@job_type varchar(15), @priority varchar(15))
as
        declare @auto_flag char(15)
        select @auto_flag = auto_flag
                from policy
                where policy.job_type = @job_type
                and   policy.job_priority = @priority
 
        if @auto_flag = 'YES'
		return 1
	else
		return 0
go
