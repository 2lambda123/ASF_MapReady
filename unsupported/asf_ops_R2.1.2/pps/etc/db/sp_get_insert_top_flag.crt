=========================*/

if exists (select * from sysobjects where name = "sp_get_insert_top_flag")
	drop proc sp_get_insert_top_flag
go

create proc sp_get_insert_top_flag ( @job_id int ) 
as
	declare @insert_top_flag  LogicalType

	select  @insert_top_flag = insert_top_flag
		from jobs
		where jobs.job_id = @job_id 

	if @insert_top_flag = 'YES'
		return 1
	else
		return 0
go
