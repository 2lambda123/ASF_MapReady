# @(#)makefile	1.1  01/23/97
###############################################################################
#
# File:         makefile
#
# Function:     Make the access client applications.
#
# Author:       S. Hardman
#
# Date:         5/2/96
#
###############################################################################

include ../../makedefs

###############################################################################
#
# Include Path Definitions
#
###############################################################################

IALL =      $(MACHIFLAGS)

###############################################################################
#
# Library Path Definitions
#
###############################################################################

LALL =      $(MACHLFLAGS)

###############################################################################
#
# Library Definitions
#
###############################################################################

XLIB =      -lX11

LIBS =      $(XLIB)

###############################################################################
#
# Flags and Defines
#
###############################################################################

DEFS =
CFLAGS =    $(MACHCFLAGS) $(DEFS)

###############################################################################
#
# Target Definition
#
###############################################################################

SRC =       *.c
OBJ =       $(SRC:%.c=%.o)
EXE =       \
            ../../../bin/$(MACH)/ims_checkdisplay \
            ../../../bin/$(MACH)/ims_testsun

###############################################################################
#
# Make the Application
#
###############################################################################

all appl:   $(EXE)

../../../bin/$(MACH)/ims_checkdisplay:  ims_checkdisplay.o
	@echo
	@echo "Creating Executable ims_checkdisplay"
	$(CC) -o $@ ims_checkdisplay.o $(LALL) $(LIBS)
	@echo

../../../bin/$(MACH)/ims_testsun:  ims_testsun.o
	@echo
	@echo "Creating Executable ims_testsun"
	$(CC) -o $@ ims_testsun.o $(LALL) $(LIBS)
	@echo

%.o:%.c
	@echo
	@echo "Compiling $<"
	$(CC) $(CFLAGS) $(IALL) -c $<

###############################################################################
#
# Object and executable cleaning.
#
###############################################################################

clean:
	@echo
	@echo "Cleaning Access client executables"
	rm -f $(OBJ) $(EXE)
	@echo

###############################################################################
#
# Executable installation.
#
###############################################################################

install:
	@echo
	@echo "Installing Access client executables"
	cp -p $(EXE) $(ASFBIN)
	@echo

###############################################################################
#
# Lint
#
###############################################################################

lint:
	$(LINT) $(IALL) $(SRC)
