# @(#)makefile	5.2  30 Sep 1996
###############################################################################
#
# File:         makefile
#
# Function:     Make the libimsodl.a library.
#
# Author:       S. Hardman
#
# Date:         2/9/96
#
###############################################################################

include ../makedefs

###############################################################################
#
# Include Path Definitions
#
###############################################################################

IEXP =      -I../eincl
IPUB =      -I../pincl
ISYB =      -I$(SYBASE)/include

IALL =      $(IEXP) $(IPUB) $(ISYB) $(MACHIFLAGS)

###############################################################################
#
# Flags and Defines
#
###############################################################################

DEFS =      
CFLAGS =    $(MACHCFLAGS) $(DEFS)

###############################################################################
#
# Source and Target Definition
#
###############################################################################

SRC = \
            ims_cmnODLQuery.c \
            ims_odl.c

OBJ =       $(SRC:%.c=%.o)
LIB =       ../../lib/$(MACH)/global/libimsodl.a

###############################################################################
#
# Make the Library
#
###############################################################################

all core corelib: $(LIB)

$(LIB):	$(OBJ)
	@echo
	@echo "Archive and Conversion"
	ar rucv $(LIB) $?
	@if [ $(MACH) = sunos ]; then ranlib $(LIB); fi
	@echo

%.o:%.c
	@echo
	@echo "Compiling $<"
	$(CC) $(CFLAGS) $(IALL) -c $<

###############################################################################
#
# Object and library cleaning.
#
###############################################################################

clean:
	@echo
	@echo "Cleaning IMS ODL export library"
	-rm -f $(OBJ) $(LIB)
	@echo

###############################################################################
#
# Library and header file installation.
#
###############################################################################

install:
	@echo
	@echo "Installing IMS ODL export library"
	cp -p $(LIB) $(ASFLIB)
	@echo

###############################################################################
#
# Lint
#
###############################################################################

lint:
	$(LINT) $(IALL) $(SRC)
